<div class="container">
   
  <form class="row valign-wrapper" action='/search' method='GET'>
    <h4><a class="navbar-brand" href="/">Reviewin</a></h4>
    <div class="input-field col s6">
      <input
        placeholder="Search foods or restaurants..."
        id="search"
        name="search"
        type="text"
        class="validate"
        required>
    </div>
    <button
      class="search-btn col btn waves-effect waves-dark amber accent-3 black-text darken4"
      type="submit">Search</button>
    <div class="col center-align">|</div>
    <% if (typeof locals.login !== 'undefined' && locals.login== true) { %>
      <a href="/user/<%= locals.idLogin %>" id="dropdown-trigger"><%= locals.username %></a>
      <div class="col center-align">|</div> 
      <a href="/user/logout/<%= locals.idLogin %>" id="dropdown-trigger">Logout</a>
    <% } else { %>
      <button
        type="button"
        id="login-btn"
        class="left col btn waves-effect waves-dark teal">login</button>
      <a href="/signup" class="col">Sign Up</a>
    <% } %>
  </form>
</div>
<div class="divider"></div>

<div id="login-form" class="container">
  <div class="row">
    <div class="card hoverable col s12">
      <div class="card-content">
        <!-- <p class="red-text">Username/password wrong.</p> -->
        <form method="POST" action="/login">
          <div class="input-field">
            <input
              id="username"
              name="username"
              type="text"
              class="validate"
              required>
            <label for="username">Username</label>
          </div>
          <div class="input-field">
            <input
              id="password"
              name="password"
              type="password"
              class="validate"
              required>
            <label for="password">Password</label>
          </div>
          <button
            class="login-btn btn waves-effect waves-light teal"
            type="submit">LOGIN</button>
        </form>
      </div>
    </div>
  </div>
</div>
