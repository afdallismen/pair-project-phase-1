<%- include('./partials/head') %>
<div class="signup-form container">
  <div class="card">
    <div class="card-content">
      <span class="card-title">Sign Up</span>
      <form method="POST" action="/user/add" class="row">

        <div class="input-field col s12">
          <input
            id="name" type="text" name="name" class="validate">
          <label for="name">Name</label>
        </div>
        <div class="input-field col s12">
          <input
            id="username" type="text" name="username" class="validate">
          <label for="username">Username</label>
        </div>
        <div class="input-field col s12">
          <input
            id="password" type="password" name="password" class="validate">
          <label for="password">Password</label>
        </div>
        <button
          class="login-btn btn waves-effect waves-light teal"
          type="submit">sign me up</button>
      </form>
    </div>
  </div>
</div>
<%- include('./partials/foot') %>